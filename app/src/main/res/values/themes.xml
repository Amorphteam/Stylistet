<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stylistet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="AppTheme" parent="Theme.Stylistet">
        <item name="android:textViewStyle">@style/TajawalTextViewStyle</item>
        <item name="android:buttonStyle">@style/TajawalButtonStyle</item>
    </style>

    <style name="TajawalTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/tajawal_regular</item>
    </style>

    <style name="TajawalButtonStyle" parent="android:Widget.Holo.Button">
        <item name="fontFamily">@font/tajawal_bold</item>
    </style>



</resources>