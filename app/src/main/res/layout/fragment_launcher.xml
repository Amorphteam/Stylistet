<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="launcherView"
            type="com.amorphteam.stylistet.launcher.launcher.LauncherView" />
    </data>

<LinearLayout
    android:id="@+id/launcher_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".launcher.launcher.LauncherFragment"
    android:background="@{Integer.valueOf(launcherView.launcherMainLayout)}"
    android:scaleType="centerCrop"

    >

        <LinearLayout
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
            android:layout_marginTop="@dimen/_30dp"
    >

            <TextView
                android:id="@+id/launcher_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2dp"
                android:gravity="center"
                android:padding="@dimen/_8dp"
                android:text="@string/launcher_title"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold"
                app:textColor="@{Integer.valueOf(launcherView.launcherTitle)}"

                />

            <TextView
                android:id="@+id/launcher_title_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2dp"
                android:gravity="center"
                android:padding="@dimen/_4dp"
                android:text="@string/launcher_title_two"
                android:textSize="@dimen/_16sp"
                app:textColor="@{Integer.valueOf(launcherView.launcherTitleTwo)}"
                />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_marginBottom="@dimen/_30dp"
        >

        <Button
            android:id="@+id/launcher_start_now"
            android:layout_width="@dimen/_217dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="@dimen/_2dp"
            android:backgroundTint="@{Integer.valueOf(launcherView.launcherStartNow)}"
            android:gravity="center"
            android:padding="@dimen/_8dp"
            android:singleLine="true"
            android:text="@string/launcher_start_now"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/launcher_you_have_an_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2dp"
            android:gravity="center"
            android:padding="@dimen/_4dp"
            android:text="@string/launcher_you_have_an_account"
            app:textColor="@{Integer.valueOf(launcherView.launcherYouHaveAnAccount)}"
            android:textSize="@dimen/_16sp" />

        <TextView
            android:id="@+id/launcher_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:gravity="center"
            android:padding="@dimen/_4dp"
            android:text="@string/launcher_sign_in"
            app:textColor="@{Integer.valueOf(launcherView.launcherSignIn)}"
            android:textSize="@dimen/_18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>

</layout>